journal = {Journal of Hydrology},
keywords = {Crop yield,Food security,Global modelling,Small reservoirs},
number = {3-4},
pages = {264--275},
publisher = {Elsevier B.V.},
title = {{The significance of local water resources captured in small reservoirs for crop production - A global-scale analysis}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2009.07.032},
