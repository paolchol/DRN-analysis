author = {Siqueira, Vin{\'{i}}cius and Paiva, Rodrigo and Fleischmann, Ayan and Fan, Fernando and Ruhoff, Anderson and Pontes, Paulo and Paris, Adrien and Calmant, St{\'{e}}phane and Collischonn, Walter},
